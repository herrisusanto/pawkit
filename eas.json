{
  "cli": {
    "version": ">= 7.3.0",
    "appVersionSource": "remote"
  },  
  "build": {
    "development:simulator": {
      "developmentClient": true,
      "channel": "development",
      "distribution": "internal",
      "ios": {
       "simulator": true
      },
      "env": {
       "APP_MODE": "development"
      }
    },
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "env": {
       "APP_MODE": "development"
      }
    },
    "preview:simulator": {
      "distribution": "internal",
      "channel": "preview",
      "android": {
       "gradleCommand": ":app:assembleRelease"
      },
      "ios": {
       "simulator": true
      },
      "env": {
       "APP_MODE": "preview"
      }
    },
    "preview": {
      "distribution": "internal",
      "android": {
       "gradleCommand": ":app:assembleRelease"
      },
      "channel": "preview",
      "env": {
       "APP_MODE": "preview"
      }
    },
    "production:ios": {
      "channel": "production",
      "env": {
       "APP_MODE": "production",
       "PLATFORM": "ios"
      }
    },
    "production:android": {
      "channel": "production",
      "env": {
       "APP_MODE": "production",
       "PLATFORM": "android"
      }
    }
  },
  "submit": {
    "production": {
     "android": {
      "applicationId": "com.pawkit.production"
     },
     "ios": {
      "bundleIdentifier": "com.pawkit.user"
     }
    }
  }
}
